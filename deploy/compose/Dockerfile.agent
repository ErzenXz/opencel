FROM golang:1.24-alpine AS build
WORKDIR /src
RUN apk add --no-cache git ca-certificates
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -trimpath -ldflags="-s -w" -o /out/opencel-agent ./apps/agent

FROM alpine:3.20
RUN apk add --no-cache ca-certificates docker-cli docker-cli-compose git bash coreutils
WORKDIR /
COPY --from=build /out/opencel-agent /opencel-agent
ENTRYPOINT ["/opencel-agent"]

